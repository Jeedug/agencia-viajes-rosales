---
import Request from "../components/Request";
import Main from "../layouts/Main.astro";
import { db, Promotions } from "astro:db";

export const prerender = false;
const all = await db.select().from(Promotions);
---

<Main>
  <div class="mx-[150px]">
    <figure class="h-[140px] w-full"></figure>
    <div class="flex flex-col items-start justify-start">
      <h1 class="text-[64px] font-extrabold text-pink-700 mb-8">Promociones</h1>
      <div class="grid grid-cols-3 gap-5 items-start justify-between w-full h-[800px] overflow-y-scroll p-6">
        {all.map((promo) => (
          <div class="relative flex flex-col items-center justify-between w-full h-[200px] bg-white rounded-lg shadow-md border overflow-hidden hover:scale-105 transition duration-500 hover:shadow-xl cursor-pointer">
            <img
              src={promo.image}
              alt="promocion"
              class="w-full h-full object-cover absolute inset-0 z-0"
            />
            <div class="relative z-10 flex flex-col items-start justify-center p-4 bg-black bg-opacity-50 w-full h-full">
              <h2 class="text-[24px] font-extrabold text-white">{promo.name}</h2>
              <p class="text-[16px] text-white">{promo.description}</p>
            </div>
            <div class="relative z-10 flex flex-row items-end justify-end p-4 w-full h-full ">
              <h2 class="text-[20px] font-extrabold text-white">${promo.price}</h2>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  <Request client:load />
</Main>