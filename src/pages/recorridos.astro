<style>

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  span {
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
  }
  
  h1 {
    animation: fadeInUp 1s ease forwards;
  }
  
  span:nth-child(1) {
    animation-delay: 0.1s;
  }
  
  span:nth-child(2) {
    animation-delay: 0.3s;
  }
  
  span:nth-child(3) {
    animation-delay: 0.5s;
  }
  
  span:nth-child(4) {
    animation-delay: 0.7s;
  }
  
  
  
  </style>